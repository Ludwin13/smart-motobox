<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99E1D9">

    <Button
        android:id="@+id/finger0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginLeft="65dp"
        android:background="@drawable/round_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/finger1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="100dp"
        android:text="2"
        android:background="@drawable/round_corners"
        app:layout_constraintLeft_toRightOf="@id/finger0"
        app:layout_constraintTop_toTopOf="@id/finger0"/>

    <Button
        android:id="@+id/finger2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="3"
        android:background="@drawable/round_corners"
        app:layout_constraintTop_toBottomOf="@+id/finger0"
        app:layout_constraintLeft_toLeftOf="@+id/finger0" />

    <Button
        android:id="@+id/finger3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="4"
        android:background="@drawable/round_corners"
        app:layout_constraintTop_toBottomOf="@id/finger1"
        app:layout_constraintLeft_toLeftOf="@id/finger1"/>

    <Button
        android:id="@+id/finger4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="5"
        android:background="@drawable/round_corners"
        app:layout_constraintTop_toBottomOf="@+id/finger2"
        app:layout_constraintLeft_toLeftOf="@+id/finger2"
         />

    <Button
        android:id="@+id/finger5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="6"
        android:background="@drawable/round_corners"
        app:layout_constraintTop_toBottomOf="@id/finger3"
        app:layout_constraintLeft_toLeftOf="@id/finger3" />

    <Button
        android:id="@+id/finger6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="7"
        android:background="@drawable/round_corners"
        app:layout_constraintTop_toBottomOf="@+id/finger4"
        app:layout_constraintLeft_toLeftOf="@+id/finger4" />
    <Button
        android:id="@+id/finger7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="8"
        android:background="@drawable/round_corners"
        app:layout_constraintTop_toBottomOf="@id/finger5"
        app:layout_constraintLeft_toLeftOf="@id/finger5" />

    <Button
        android:id="@+id/finger8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="9"
        android:background="@drawable/round_corners"
        app:layout_constraintTop_toBottomOf="@+id/finger6"
        app:layout_constraintLeft_toLeftOf="@+id/finger6" />

    <Button
        android:id="@+id/finger9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="10"
        android:background="@drawable/round_corners"
        app:layout_constraintTop_toBottomOf="@id/finger7"
        app:layout_constraintLeft_toLeftOf="@id/finger7" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:background="@drawable/round_corners"
        android:layout_marginBottom="-500dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>